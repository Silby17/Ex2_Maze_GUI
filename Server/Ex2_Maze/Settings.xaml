<Window x:Class="Ex2_Maze.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex2_Maze"
        mc:Ignorable="d"
        Title="Window2" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="settings.jpg"/>
    </Window.Background>
    <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" 
                Orientation="Vertical">
       
        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" 
                Orientation="Horizontal" Width="75">
            <TextBlock Margin="5,2" MinWidth="45" Text="IP" 
                   Foreground="LightSteelBlue" />
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" 
                Orientation="Horizontal" Width="75">
            <TextBlock Margin="5,2" MinWidth="45" Text="Port" 
                   Foreground="LightSteelBlue" />
            <Button>saveConnect</Button>
        </WrapPanel>
    </WrapPanel>
</Window>
